<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ctrujilloTS2A.Views.vLogin"
             Title="vLogin">
    <VerticalStackLayout
        Padding="20"
        Spacing="20">
        <Label 
            Text="Tarea Semana 3"
            FontSize="20"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Image
            Source="uisrael.png"/>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Label
                 Text="Usuario"
                 FontSize="18"
                 HorizontalTextAlignment="Center"
                 Grid.Row="0"
                 Grid.Column="0"/>

            <Entry
                 x:Name="txtUsuario"
                 Placeholder="Ingrese el usuario"
                 Grid.Row="0"
                 Grid.Column="1"/>

            <Label
                Text="Contraseña"
                FontSize="18"
                HorizontalTextAlignment="Center"
                Grid.Row="1"
                Grid.Column="0"/>

            <Entry
                x:Name="txtContraseña"
                Placeholder="Ingrese la contraseña"
                Grid.Row="1"
                Grid.Column="1"/>
        </Grid>

        <Button
            x:Name="btnIniciarSesion"
            Text="Iniciar Sesion"
            Clicked="btnIniciarSesion_Clicked" />

    </VerticalStackLayout>
</ContentPage>